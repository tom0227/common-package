{
  "name": "@tom0227/test-utils",
  "version": "1.0.0",
  "description": "ORIパッケージング共通テストユーティリティ",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm install --no-save @types/node || true",
    "prepare": "npm run clean && npm run build",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "quality:check": "npm run lint:check && npm run format:check && npm run typecheck && npm run test:cov"
  },
  "keywords": [
    "test",
    "jest",
    "nestjs",
    "prisma",
    "graphql",
    "utilities"
  ],
  "author": "ORI Package Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tom0227/common-package.git",
    "directory": "test-utils"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "peerDependencies": {
    "@types/node": "^20.0.0",
    "@nestjs/common": "^10.4.20",
    "@nestjs/testing": "^10.4.20",
    "@prisma/client": "^5.7.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.4",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@types/supertest": "^2.0.12"
  },
  "devDependencies": {
    "@tom0227/config-common": "file:../config-common",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  }
}
